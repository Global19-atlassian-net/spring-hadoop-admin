<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/integration" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:beans="http://www.springframework.org/schema/beans" xmlns:p="http://www.springframework.org/schema/p" xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.0.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/integration http://www.springframework.org/schema/integration/spring-integration.xsd">

	<publish-subscribe-channel id="input-workflows" />
	
	<publish-subscribe-channel id="remove-workflows" />
	
	<logging-channel-adapter channel="input-workflows"/>
	
	<gateway id="workflowSender" service-interface="org.springframework.data.hadoop.admin.service.WorkflowSender"
		default-request-channel="input-workflows" />
	
	<gateway id="workflowRemover" service-interface="org.springframework.data.hadoop.admin.service.WorkflowRemover"
		default-request-channel="remove-workflows" />

	<bean id="workflowService" class="org.springframework.data.hadoop.admin.service.SimpleWorkflowService"
			xmlns="http://www.springframework.org/schema/beans">
		<property name="workflowSender" ref="workflowSender" />
		<property name="workflowRemover" ref="workflowRemover" />
	</bean>



</beans:beans>
